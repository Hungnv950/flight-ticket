                          span 3 hành khách
                  .form__btn-search
                    button Tìm Kiếm

    main.main-search-page
      .review
        .review__wrap
          .slider.js-slider
            .slider__list-wrap
              .slider__list
                .slider__item
                  .img-wrap.img-wrap--medium
                    img(src='/images/avatar-demo2.png').img-full-height
                  p.reviewer Steve Vo thanh
                  p.review__content “For the first time in our company's history, we were featured on every single platform that we worked on, thanks to ThankTrips.”
                .slider__item
                  .img-wrap.img-wrap--medium
                    img(src='/images/avatar-demo2.png').img-full-height
                  p.reviewer Nguyen Van A
                  p.review__content “For the first time in our company's history, we were featured on every single platform that we worked on, thanks to ThankTrips.”
                .slider__item
                  .img-wrap.img-wrap--medium
                    img(src='/images/avatar-demo2.png').img-full-height
                  p.reviewer Tran Duc B
                  p.review__content “For the first time in our company's history, we were featured on every single platform that we worked on, thanks to ThankTrips.”
            .slider__control-btn.slider__btn-prev.js-prev-slide
              include ././images/icon_arrow-left.svg
            .slider__control-btn.slider__btn-next.js-next-slide
              include ././images/icon_arrow-right.svg
      .offer
        h1.offer__title ƯU ĐÃI HẤP DẪN
        span.offer__intro Ưu đãi Chỉ dành riêng cho thành viên ThankTrip
        .offer__content
          .offer__item
            img(src='/images/gift.png')
            p.offer__item-content Phần thưởng hấp dẫn
          .offer__item
            img(src='/images/sale.png')
            p.offer__item-content Giảm giá hấp dẫn
          .offer__item
            img(src='/images/group-user.png')
            p.offer__item-content Ưu đãi cho khách hàng
              br
              | theo nhóm
        .recommend-regis
          img(src='/images/gift.png')
          p.recommend-regis__content Bạn chưa là thành viên.
            br
            | Vui lòng&nbsp;
            a(href='#') đăng nhập
            | &nbsp;hoặc&nbsp;
            a(href='#') đăng kí
            | &nbsp;tài khoản để hưởng các ưu đãi đặc biệt cho thành viên từ ThankTrip
      .partner
        h1.partner__title Đối tác hàng không
        .partner__wrap
          .partner__item
            img(src='/images/logo-bamboo.png' alt='Bamboo')
          .partner__item
            img(src='/images/logo-jetstar.png' alt='Jetstar')
          .partner__item
            img(src='/images/logo-bamboo.png' alt='Bamboo')
          .partner__item
            img(src='/images/logo-bamboo.png' alt='Bamboo')
          .partner__item
            img(src='/images/logo-bamboo.png' alt='Bamboo')

    +footer('footer-search-page')
