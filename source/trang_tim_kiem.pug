                          span Vinh
                        li.dropdown__item
                          span Ho Chi Minh
                    .form-group
                      label.form-title Ngày đi
                      .group-input
                        input.form-control(type='text' value='14/03/2020')
                        .icon-search
                          include ./images/icon_celendar.svg
                    .form-group
                      label.form-title Ngày về
                      .group-input
                        input.form-control(type='text' value='14/03/2020')
                        .icon-search
                          include ./images/icon_celendar.svg
                  .form__passenger
                    .form-group.dropdown.js-dropdown
                      label.form-title Số hành khách người lớn
                      .group-input
                        select.form-control
                          option 1 hành khách
                          option 2 hành khách
                        .icon-search.js-control-show-dropdown
                          include ./images/icon_arrow-down-light.svg
                      ul.dropdown__list
                        li.dropdown__item
                          span 1 hành khách
